<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseClicked="#cambiarVista" prefHeight="794.0" prefWidth="774.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VistaTabla">
   <children>
      <TextField fx:id="buscador" layoutX="107.0" layoutY="100.0" prefHeight="40.0" prefWidth="235.0" promptText="%click_to_search" styleClass="text-field" stylesheets="@../../../styles/login.css">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
      </TextField>
      <Button fx:id="buscar" layoutX="349.0" layoutY="100.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="77.0" styleClass="boton" stylesheets="@../../../styles/login.css" text="%search" textFill="#f8f8f8" />
      <TableView id="tablaLibros" fx:id="tablaLibros" layoutX="97.0" layoutY="186.0" prefHeight="473.0" prefWidth="603.0" styleClass="text-font">
         <stylesheets>
            <URL value="@../../../styles/tabla.css" />
            <URL value="@../../../styles/login.css" />
         </stylesheets>
      </TableView>
      <Button fx:id="btnVer" layoutX="97.0" layoutY="698.0" mnemonicParsing="false" onAction="#cambiarVista" prefHeight="52.0" prefWidth="285.0" styleClass="boton" stylesheets="@../../../styles/login.css" text="%view" textFill="#f8f8f8" />
      <Button fx:id="btnBorrar" layoutX="421.0" layoutY="698.0" mnemonicParsing="false" onAction="#eliminarLibroSeleccionado" prefHeight="52.0" prefWidth="285.0" styleClass="botonDelete" stylesheets="@../../../styles/botonDelete.css" text="%delete" />
   </children>
</AnchorPane>
